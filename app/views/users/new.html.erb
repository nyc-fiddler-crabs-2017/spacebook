<h1>New User Form</h1>
<% if @errors %>
<ul>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @user, html: {class: "form-class"} do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Enter Username", class: 'this-is-a-class' %>
  </div>
  
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  
  <div>
    <%= f.label :city %>
    <%= f.text_field :city, placeholder: "Enter City" %>
  </div>
  
  <div>
    <%= f.submit "Create User" %>
  </div>
  
  
<% end %>